# Environment: DEVELOPMENT
# Copy this file to .env for local development

# Database Configuration
# Use format: postgresql://username:password@localhost:port/database
DATABASE_URL="postgresql://myapp_user:myapp_password@localhost:5432/myapp_db"

# JWT Secret
# Generate a strong secret for development
JWT_SECRET="your_development_jwt_secret_here"

# Server Port
PORT=3001

# Frontend URL for CORS
FRONTEND_URL="http://localhost:3001"

# Environment (leave as 'development' for local development)
NODE_ENV=development